{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
  "baseUrl": ".",
    "allowJs": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.js",
    "postcss.config.js",
    "tailwind.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}