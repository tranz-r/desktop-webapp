{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tailwind.config.*",
        "postcss.config.*",
        "tsconfig*.json",
        ".env*"
      ],
      "env": [
        "NEXT_PUBLIC_*",
        "STRIPE_*", 
        "SUPABASE_*",
        "NODE_ENV"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_*",
        "STRIPE_*",
        "SUPABASE_*"
      ]
    },
    "lint": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "eslint.config.*",
        ".eslintrc.*"
      ]
    },
    "typecheck": {
      "outputs": [],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig*.json"
      ]
    },
    "format": {
      "inputs": [
        "$TURBO_DEFAULT$",
        ".prettierrc*",
        "prettier.config.*"
      ],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
