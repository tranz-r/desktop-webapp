{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^typecheck"],
      "outputs": ["dist/**", ".next/**", "build/**"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tailwind.config.*",
        "postcss.config.*",
        "tsconfig*.json",
        ".env*"
      ],
      "env": [
        "NEXT_PUBLIC_",
        "STRIPE_",
        "NODE_ENV"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "typecheck": {
      "outputs": []
    },
    "format": {}
  }
}
